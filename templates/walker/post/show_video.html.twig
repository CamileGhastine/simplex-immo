<div class="row text-center">
    {% for video in post.videos %}
    <div class="my-2">
        <span type="button" class="badge rounded-pill bg-secondary" data-bs-toggle="modal"
              data-bs-target="#video{{ video.id }}">
            Vidéo{{ loop.index }}
        </span>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="video{{ video.id }}" tabindex="-1" aria-labelledby="video{{ video.id }}Label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="video{{ video.id }}Label">{{ video.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <iframe width="560" height="315" src="{{ video.url }}" title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Fermer la vidéo</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endfor %}