{% extends 'base.html.twig' %}

{% block title %}Simplex-Immo: Accueil{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="col-12 simplexHomepage col-12 d-flex align-items-end justify-content-center py-3">
            Articles
        </h1>
        <div class="col-12">
            <div class="row">
                <div class="col-6 category-badges">
                    {% for category in categories %}
                        <a href="{{ path('index_by_category', {'id' : category.id}) }}">
                            <span class="badge bg-secondary">{{ category.title }}</span>
                        </a>
                    {% endfor %}
                </div>
                <div class="col-6 d-flex justify-content-end">
                    {{ renderPagination | raw }}
                </div>
            </div>
        </div>

        {% for  post in posts %}
            <div class="col-12 card text-white bg-secondary border-warning mb-3">
                <div class="card-header row">
                    <div class=" col-11 text-start text-muted">
                        {{ post.createdAt|date("m/d/Y") == post.updatedAt|date("m/d/Y")  ?
                        post.createdAt|date("m/d/Y") : 'mise Ã  jour le ' ~ post.updatedAt|date("m/d/Y") }}
                    </div>
                    <div class="col-1 text-center">
                        <span class="badge rounded-pill bg-warning">{{ post.category.title }}</span>

                    </div>
                </div>

                <div class="card-body row">
                    <div class="col-2">
                        {% set poster = (post.medias | first) ? (post.medias | first).src : '/img/posts/post.jpg' %}
                        <img src="{{ asset(poster) }}" alt="{{ "alt de l'image" }}"
                             class="img-thumbnail"/>
                    </div>
                    <div class="col-10">
                        <h2 class="card-title">
                            <a href="" class="newsLink">{{ post.title }}</a>
                        </h2>
                        <div class="col-10">
                            <p class="card-text">
                                {{ post.content | slice(1, 400) }} ...
                                <a href="{{ path('index') }}">lire la suite</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="col-12 d-flex justify-content-center mb-3">
            {{ renderPagination | raw }}
        </div>
    </div>
{% endblock %}
