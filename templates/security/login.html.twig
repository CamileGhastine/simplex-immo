{% extends 'base.html.twig' %}

{% block title %}Simplex-Immo : connexion!{% endblock %}

{% block body %}
    <div class="toShort">
        <form method="post">
            <h1 class="mb-3 font-weight-normal simplexHomepage text-center">Connexion</h1>

            {% if error %}
                <div class="offset-2  col-10 alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="offset-2  col-10 alert alert-success text-center" role="alert">{{ message }}</div>
            {% endfor %}

            {% if app.user %}
                <div class="offset-2  col-10 mb-3 text-center">
                    Vous êtes déjà connecté avec le courriel {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="row my-3">
                <div class="col-2 ">
                    <label for="inputEmail">Courriel</label>
                </div>
                <div class="col-10">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control" autocomplete="email" required autofocus>
                </div>
            </div>

            <div class="row my-3">
                <div class="col-2">
                    <label for="inputPassword">Mot de passe</label>
                </div>
                <div class="col-10">
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="row my-3">
                <div class="offset-2 col-10">
                    <button class="btn btn-lg btn-warning" type="submit">Connexion</button>
                </div>
                <div class="offset-2 col-10 mt-3">
                   <a href="">Mot de passe oublié</a>
                </div>
                <div class="offset-2 col-10 mt-3">
                    Vous n'avez pas de compte, <a href="{{ path('app_register') }}">Enregistrez-vous</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
